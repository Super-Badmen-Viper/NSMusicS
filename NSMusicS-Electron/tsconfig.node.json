{
  "extends": "@tsconfig/node18/tsconfig.json",
  "include": [
    "vite.config.*",
    "vitest.config.*",
    "cypress.config.*",
    "nightwatch.conf.*",
    "playwright.config.*",
    "src/**/*",
    "plugins/**/*",
    "src",
    "types",
    "./src/*.ts",
    "./src/*.vue",
    "./src/*.ext"
  ],
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "composite": true,
    "noEmit": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "types": ["naive-ui/volar"],
    "baseUrl": "./",
    "paths": {
      "@/data/*": ["src/data/*"],
      "@/router/*": ["src/router/*"],
      "@/server_api/*": ["src/server_api/*"],
      "@/utils/*": ["src/utils/*"],
      "@/views_components/*": ["src/views_components/*"],
      "@/views_drawer/*": ["src/views_drawer/*"],
      "@/views_page/*": ["src/views_page/*"],
      "@/views_router/*": ["src/views_router/*"]
    }
  }
}

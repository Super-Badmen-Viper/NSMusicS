                <!--歌词列表（行同步）-->
                <ListView 
                    UseLayoutRounding="True" SnapsToDevicePixels="True" RenderOptions.BitmapScalingMode="HighQuality" 
                    ItemsPanel="{DynamicResource ItemsPanelTemplate2}" 
                    x:Name="ListView_Temp_MRC" Background="{x:Null}" BorderBrush="{x:Null}" 
                    Foreground="White"
                    ScrollViewer.VerticalScrollBarVisibility="Disabled" ScrollViewer.HorizontalScrollBarVisibility="Disabled" 
                    Margin="140,100,0,90" Width="2000" Height="490"
                    BorderThickness="0" IsSynchronizedWithCurrentItem="False" Focusable="False" 
                    IsTextSearchEnabled="False" HorizontalContentAlignment="Left" 
                    VerticalContentAlignment="Stretch" HorizontalAlignment="Left"                
                    ClipToBounds="True"                  
                    TextOptions.TextFormattingMode="Display" TextOptions.TextHintingMode="Fixed" 
                    ScrollViewer.CanContentScroll="True"                 
                    >
                    <ListView.Resources>
                        <Style TargetType="{x:Type GridViewColumnHeader}">
                            <Setter Property="Visibility" Value="Hidden"/>
                        </Style>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="BorderThickness" Value="0"/>
                        </Style>
                        <!--ListViewItem的选中透明样式-->
                        <Style  TargetType="{x:Type ListViewItem}">
                            <!-- 边框大小 -->
                            <Setter Property="BorderThickness" Value="0"/>
                            <!-- 边框颜色 -->
                            <!-- text居中 -->
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            <!-- 行高 -->
                            <Setter Property="Height" Value="60"/>
                            <Setter Property="FontSize" Value="22"/>
                            <Setter Property="ScrollViewer.CanContentScroll" Value="False"/>

                            <Setter Property="SnapsToDevicePixels" Value="True"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type ListViewItem}">
                                        <Border x:Name="bd"  
                                            BorderThickness="0"  
                                            SnapsToDevicePixels="True">
                                            <GridViewRowPresenter HorizontalAlignment="Center" Height="55" />
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsSelected" Value="False">
                                                <Setter Property="Foreground" Value="White"/>
                                            </Trigger>
                                            <Trigger Property="IsSelected" Value="True">
                                                <!-- 行高 -->
                                                <!-- <Setter Property="Width" Value="500"/>
                                            开启超级特效：圆形楼梯循环动画：Value小于444时开启
                                            -->
                                                <Setter Property="FontSize" Value="32"/>
                                                <Setter Property="Margin" Value="100,0,-100,0"/>
                                                <Setter Property="TextOptions.TextFormattingMode" Value="Display"/>
                                                <Setter Property="TextOptions.TextHintingMode" Value="Fixed"/>
                                                <Setter Property="VerticalContentAlignment" Value="Stretch"/>
                                                <Setter x:Name="Select_Item_Height" Property="Height" Value="100"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListView.Resources>
                    <ListView.View>
                        <GridView AllowsColumnReorder="True">
                            <!--ListviewItem的长度-->
                            <GridViewColumn Width="2000" x:Name="ListView_Temp_MRC_GridViewColumn">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <VirtualizingStackPanel Orientation="Vertical">
                                            <TextBlock HorizontalAlignment="Stretch"
                                                   TextWrapping="Wrap" TextAlignment="Left"
                                                   LineStackingStrategy="BlockLineHeight" 
                                                   LineHeight="33"
                                                   x:Name="Text_TextBlock"
                                                   Text="{Binding Song_MRC_Line}"
                                                   FontWeight="ExtraBlack"
                                                   IsHitTestVisible="False" Focusable="False" IsEnabled="False" 
                                                   >
                                                <!--编辑文字段落的行高，防止溢出 LineStackingStrategy="BlockLineHeight" LineHeight="20" -->
                                                <TextBlock.Triggers>
                                                    <EventTrigger RoutedEvent="UIElement.MouseLeftButtonDown">
                                                        <BeginStoryboard>
                                                            <Storyboard x:Name="Text_Storyboard" Timeline.DesiredFrameRate="60">
                                                                <DoubleAnimationUsingKeyFrames x:Name="Text_DoubleAnimationUsingKeyFrames"
                                                                Duration="0:0:4"
                                                                Storyboard.TargetName="Trans" Storyboard.TargetProperty="X"/>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </EventTrigger>
                                                </TextBlock.Triggers>
                                                <TextBlock.Foreground>
                                                    <LinearGradientBrush EndPoint="1,0" StartPoint="0,0">
                                                        <LinearGradientBrush.RelativeTransform>
                                                            <TranslateTransform X="-0.5" x:Name="Trans"/>
                                                        </LinearGradientBrush.RelativeTransform>
                                                        <GradientStop Color="#FF00FFA2" Offset="0.49"/>
                                                        <GradientStop Color="White" Offset="0.51"/>
                                                    </LinearGradientBrush>
                                                </TextBlock.Foreground>
                                            </TextBlock>
                                            <TextBlock 
                                                FontSize="18" FontWeight="ExtraBlack"
                                                Text="{Binding Song_CRC_Line}"
                                                >
                                            </TextBlock>
                                        </VirtualizingStackPanel>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>
                <!-- 掩盖ListViewMRC,形成不同层次 -->
                <TextBox x:Name="TextBox_ListViewMRC_Up" 
                     Margin="140,100,0,90" Width="999" Height="490"
                     TextWrapping="Wrap" Text="TextBox" BorderBrush="{x:Null}" Background="{x:Null}" SelectionBrush="{x:Null}" Foreground="{x:Null}" 
                     HorizontalAlignment="Left" UseLayoutRounding="True" SnapsToDevicePixels="True" RenderTransformOrigin="0.5,0.5">
                    <TextBox.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform AngleY="0.187"/>
                            <RotateTransform/>
                            <TranslateTransform Y="-1.517"/>
                        </TransformGroup>
                    </TextBox.RenderTransform>
                    <TextBox.Style>
                        <Style TargetType="{x:Type TextBox}">
                            <!-- 边框大小 -->
                            <Setter Property="BorderThickness" Value="0"/>
                        </Style>
                    </TextBox.Style>
                </TextBox>
                <ListView 
                    UseLayoutRounding="True" SnapsToDevicePixels="True" RenderOptions.BitmapScalingMode="HighQuality" 
                    x:Name="ListView_Temp_MRC_Temp" Background="{x:Null}" BorderBrush="{x:Null}" 
                    Foreground="White" FontSize="20" FontWeight="ExtraBold"
                    ScrollViewer.VerticalScrollBarVisibility="Disabled" ScrollViewer.HorizontalScrollBarVisibility="Disabled" 
                    Margin="140,100,0,90" Width="999" Height="490"
                    BorderThickness="0" IsSynchronizedWithCurrentItem="False" Focusable="False" 
                    IsTextSearchEnabled="False" HorizontalContentAlignment="Left" 
                    VerticalContentAlignment="Stretch" HorizontalAlignment="Left"                
                    ClipToBounds="True"
                    TextOptions.TextFormattingMode="Display" TextOptions.TextHintingMode="Fixed" Visibility="Collapsed"
                    >
                    <ListView.Resources>
                        <Style TargetType="{x:Type GridViewColumnHeader}">
                            <Setter Property="Visibility" Value="Hidden"/>
                        </Style>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="BorderThickness" Value="0"/>
                        </Style>
                        <!--ListViewItem的选中透明样式-->
                        <Style  TargetType="{x:Type ListViewItem}">
                            <!-- 边框大小 -->
                            <Setter Property="BorderThickness" Value="0"/>
                            <!-- 边框颜色 -->
                            <!-- text居中 -->
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            <!-- 行高 -->
                            <Setter Property="Height" Value="55"/>
                            <Setter Property="FontSize" Value="20"/>
                            <Setter Property="ScrollViewer.CanContentScroll" Value="False"/>

                            <Setter Property="SnapsToDevicePixels" Value="True"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type ListViewItem}">
                                        <Border x:Name="bd"  
                                            BorderThickness="0"  
                                            SnapsToDevicePixels="True">
                                            <GridViewRowPresenter HorizontalAlignment="Center" Height="55" />
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsSelected" Value="False">
                                                <Setter Property="Foreground" Value="White"/>
                                            </Trigger>
                                            <Trigger Property="IsSelected" Value="True">
                                                <!-- 行高 -->
                                                <!-- <Setter Property="Width" Value="500"/>
                                            开启超级特效：圆形楼梯循环动画：Value小于444时开启
                                            -->
                                                <Setter Property="FontSize" Value="30"/>
                                                <Setter Property="Margin" Value="100,0,-100,0"/>
                                                <Setter Property="TextOptions.TextFormattingMode" Value="Display"/>
                                                <Setter Property="TextOptions.TextHintingMode" Value="Fixed"/>
                                                <Setter Property="VerticalContentAlignment" Value="Stretch"/>
                                                <Setter x:Name="Select_Item_Height" Property="Height" Value="88"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListView.Resources>
                    <ListView.View>
                        <GridView AllowsColumnReorder="True">
                            <GridViewColumn Width="555" x:Name="ListView_Temp_MRC_Temp_GridViewColumn">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock HorizontalAlignment="Stretch"
                                                   TextWrapping="Wrap" TextAlignment="Left"
                                                   LineStackingStrategy="BlockLineHeight" LineHeight="26"
                                                   Padding="0,0,0,0"
                                                   Text="{Binding Song_MRC_Line}"
                                                   FontWeight="ExtraBlack"
                                                   IsHitTestVisible="False" Focusable="False" IsEnabled="False" 
                                                   >
                                            <TextBlock.Effect>
                                                <DropShadowEffect Color="Black" BlurRadius="4" ShadowDepth="1" Opacity="1" />
                                            </TextBlock.Effect>
                                        </TextBlock>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>

                    <ListView.ItemContainerStyle>
                        <Style TargetType="{x:Type ListViewItem}">
                            <!-- 边框大小 -->
                            <Setter Property="BorderThickness" Value="0"/>
                            <!-- 边框颜色 -->
                            <Setter Property="BorderBrush" Value="Transparent"/>
                            <!-- text居中 -->
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            <!-- 行高 -->
                            <Setter Property="Height" Value="40"/>

                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Foreground" Value="#FF17EAA7"/>
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="BorderBrush" Value="Transparent"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                </Trigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Panel.Background" Value="Transparent"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ListView.ItemContainerStyle>
                </ListView>

                <TextBlock x:Name="TextBox_SongName"  
                            UseLayoutRounding="True" SnapsToDevicePixels="True" RenderOptions.BitmapScalingMode="HighQuality"  
                            Block.TextAlignment="Left" VerticalAlignment="Center"  
                            TextWrapping="Wrap" 
                            Text="{Binding Song_Name}" FontWeight="ExtraBold" TextAlignment="Justify" TextOptions.TextFormattingMode="Display"  
                            FontSize="26" Foreground="White"  Focusable="False" 
                            HorizontalAlignment="Left" 
                            Margin="145,-630,0,0" 
                            Visibility="Collapsed"
                            >
                    <TextBlock.Effect>
                        <DropShadowEffect Color="Black" BlurRadius="4" ShadowDepth="1" Opacity="1" />
                    </TextBlock.Effect>
                </TextBlock>
                <TextBlock x:Name="TextBox_SingerName"  
                            UseLayoutRounding="True" SnapsToDevicePixels="True" RenderOptions.BitmapScalingMode="HighQuality"  
                            Block.TextAlignment="Left" VerticalAlignment="Center"  
                            TextWrapping="Wrap" 
                            Text="{Binding Singer_Name}" FontWeight="ExtraBold" TextAlignment="Justify" 
                            TextOptions.TextFormattingMode="Display"  
                            FontSize="18" Foreground="White"  Focusable="False" 
                            HorizontalAlignment="Left" 
                            Margin="145,-566,0,0" 
                            Visibility="Collapsed"
                            >
                    <TextBlock.Effect>
                        <DropShadowEffect Color="Black" BlurRadius="4" ShadowDepth="1" Opacity="1" />
                    </TextBlock.Effect>
                </TextBlock>
                <TextBlock x:Name="TextBox_SongAlbumName"   
                           UseLayoutRounding="True" SnapsToDevicePixels="True" RenderOptions.BitmapScalingMode="HighQuality"  
                           Block.TextAlignment="Left" VerticalAlignment="Center"  
                           TextWrapping="Wrap" 
                           Text="{Binding Album_Name}" FontWeight="ExtraBold" TextAlignment="Justify" TextOptions.TextFormattingMode="Display"  
                           FontSize="18" Foreground="White"  Focusable="False" 
                           HorizontalAlignment="Left" 
                           Margin="145,-520,0,0"
                           Visibility="Collapsed"
                           >
                    <TextBlock.Effect>
                        <DropShadowEffect Color="Black" BlurRadius="4" ShadowDepth="1" Opacity="1" />
                    </TextBlock.Effect>
                </TextBlock>

                <Button 
                x:Name="Button_Return_MainWindow"
                Style="{StaticResource MyButton}" Content=""  
                Width="18" Height="18" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="28,21,0,0"
                >
                    <Button.Background>
                        <ImageBrush ImageSource="/MoZhiMusicPlayer_GithubAuthor_XiangCheng;component/ico_ui_library/下-01.png"/>
                    </Button.Background>
                    <Button.Effect>
                        <DropShadowEffect Color="Black" BlurRadius="4" ShadowDepth="1" Opacity="1" />
                    </Button.Effect>
                </Button>

                <Button 
            x:Name="Button_Min"
            Style="{StaticResource MyButton}"
                HorizontalAlignment="Right" Height="20" 
                VerticalAlignment="Top" Width="20" Cursor="Hand" Margin="0,13,80,0"
                UseLayoutRounding="True" SnapsToDevicePixels="True" RenderOptions.BitmapScalingMode="HighQuality"  
                >
                    <Button.Background>
                        <ImageBrush ImageSource="/MoZhiMusicPlayer_GithubAuthor_XiangCheng;component/ico_ui_library/最小化.png"/>
                    </Button.Background>
                    <Button.Effect>
                        <DropShadowEffect Color="Black" BlurRadius="4" ShadowDepth="1" Opacity="1" />
                    </Button.Effect>
                </Button>
                <Button 
            x:Name="Button_Max"
            Style="{StaticResource MyButton}"
                HorizontalAlignment="Right" Height="14" Width="14" 
                UseLayoutRounding="True" SnapsToDevicePixels="True" RenderOptions.BitmapScalingMode="HighQuality"  
                HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" Margin="0,16,53,0" Cursor="Hand" VerticalAlignment="Top" 
                >
                    <Button.Background>
                        <ImageBrush ImageSource="/MoZhiMusicPlayer_GithubAuthor_XiangCheng;component/ico_ui_library/最大化.png" Stretch="Uniform"/>
                    </Button.Background>
                    <Button.Effect>
                        <DropShadowEffect Color="Black" BlurRadius="4" ShadowDepth="1" Opacity="1" />
                    </Button.Effect>
                </Button>
                <Button 
            x:Name="Button_Exit"
            Style="{StaticResource MyButton}"
                HorizontalAlignment="Right" Height="20" 
                VerticalAlignment="Top" Width="20" Cursor="Hand" Margin="0,13,22,0"
                UseLayoutRounding="True" SnapsToDevicePixels="True" RenderOptions.BitmapScalingMode="HighQuality"  
                >
                    <Button.Background>
                        <ImageBrush ImageSource="/MoZhiMusicPlayer_GithubAuthor_XiangCheng;component/ico_ui_library/关闭.png"/>
                    </Button.Background>
                    <Button.Effect>
                        <DropShadowEffect Color="Black" BlurRadius="4" ShadowDepth="1" Opacity="1" />
                    </Button.Effect>
                </Button>
            </Grid>
        </Grid>

        <!--K歌模块-->
        <Grid Visibility="Collapsed">
            <Canvas 
                x:Name="Canvas_Song_Name"
                VerticalAlignment="Center" ClipToBounds="True" 
                    Height="490"  Margin="555,14,0,0" Width="400" HorizontalAlignment="Left" Background="White">
                <Canvas.Triggers>
                    <EventTrigger RoutedEvent="FrameworkElement.MouseRightButtonDown">
                        <BeginStoryboard>
                            <Storyboard x:Name="StoryBorad_Singing_Mode" Timeline.DesiredFrameRate="30">
                                <DoubleAnimationUsingKeyFrames
                                    x:Name="DoubleAnimationUsingKeyFrames_TextBlock_Song_Name"
                                    RepeatBehavior="Forever"
                                    Storyboard.TargetName="content1"
                                    Storyboard.TargetProperty="RenderTransform.X"
                                    >
                                    <LinearDoubleKeyFrame Value="0" KeyTime="0:0:0" />
                                    <LinearDoubleKeyFrame x:Name="LinearDoubleKeyFrame_Song_Name_Text_Length" 
                                                          Value="-500" KeyTime="0:0:4" />
                                    <LinearDoubleKeyFrame x:Name="LinearDoubleKeyFrame_Song_Name_Text_Length_other"
                                                          Value="-500" KeyTime="0:0:5.2" />
                                    <!-- 空余4s用来延迟动画效果（与QQ音乐界面更相似） -->
                                </DoubleAnimationUsingKeyFrames>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Canvas.Triggers>
                <StackPanel x:Name="content1"
                            VerticalAlignment="Center" HorizontalAlignment="Left" 
                            Width="Auto" Height="490" Orientation="Horizontal">
                    <StackPanel.RenderTransform>
                        <TranslateTransform Y="0" />
                    </StackPanel.RenderTransform>

                    <Border 
                        CornerRadius="6" 
                        Focusable="False" 
                        Height="10" Width="60" 
                    >
                        <Border.Triggers>
                            <EventTrigger RoutedEvent="UIElement.MouseLeftButtonDown">
                                <BeginStoryboard>
                                    <Storyboard >
                                        <DoubleAnimationUsingKeyFrames 
                                            Duration="0:0:4"
                                            Storyboard.TargetName="Trans" Storyboard.TargetProperty="X"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Border.Triggers>
                        <Border.Background>
                            <LinearGradientBrush EndPoint="1,0" StartPoint="0,0">
                                <LinearGradientBrush.RelativeTransform>
                                    <TranslateTransform X="-0.5" x:Name="Trans"/>
                                </LinearGradientBrush.RelativeTransform>
                                <GradientStop Color="#FF00FFA2" Offset="0.49"/>
                                <GradientStop Color="#FFFFBB00" Offset="0.51"/>
                            </LinearGradientBrush>
                        </Border.Background>
                    </Border>
                    
                    
                    <Border CornerRadius="6" Focusable="False" Height="10" Width="40" Margin="0,80,0,0">
                        <Border.Background>
                            <LinearGradientBrush EndPoint="1,0" StartPoint="0,0">
                                <LinearGradientBrush.RelativeTransform>
